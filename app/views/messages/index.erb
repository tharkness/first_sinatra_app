<% @messages.each do |message| %>
  <div class = "message">
    <h3><a href="/messages/<%= message.id %>"><%= message.author %></a><small>(<%= message.url %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
<% end %>
<a href="/messages/new">Post a message... It's FREE (for now)!</a>